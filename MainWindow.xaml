<Window x:Class="arraylist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:arraylist"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="129,222,0,0" VerticalAlignment="Top" Width="105" Click="Add_click" Height="48"/>
        <Button x:Name="btnRemove" Content="Remove" HorizontalAlignment="Left" Margin="327,222,0,0" VerticalAlignment="Top" Width="111" Click="Remove_click" Height="48"/>
        <Button x:Name="btnShow" Content="Show all" HorizontalAlignment="Left" Margin="535,222,0,0" VerticalAlignment="Top" Width="95" Click="Show_click" RenderTransformOrigin="0.5,0.5" Height="44">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.397"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="txtData" HorizontalAlignment="Left" Height="41" Margin="129,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="439"/>

    </Grid>
</Window>
